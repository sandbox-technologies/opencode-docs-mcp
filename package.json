{
  "name": "opencode-docs-mcp",
  "version": "1.1.0",
  "description": "MCP server for searching OpenCode documentation - Mintlify-style docs search for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "opencode-docs-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:remote": "node dist/remote-server.js",
    "dev": "tsc -w",
    "scrape": "node dist/scraper.js",
    "prepare": "npm run build && npm run scrape",
    "prepublishOnly": "npm run build && npm run scrape"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "cheerio": "^1.0.0-rc.12",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@vercel/node": "^3.0.0",
    "typescript": "latest"
  },
  "keywords": [
    "mcp",
    "opencode",
    "documentation",
    "search",
    "ai",
    "llm",
    "model-context-protocol",
    "mintlify",
    "cursor",
    "claude",
    "agent"
  ],
  "author": "Inspector Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/opencode-docs-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/anthropics/opencode-docs-mcp/issues"
  },
  "homepage": "https://opencode.ai/docs/",
  "engines": {
    "node": ">=18"
  }
}
